[Unit]
Description=Forest Vendetta - mongodb Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop forestvendetta-mongodb
ExecStartPre=-/usr/bin/docker rm forestvendetta-mongodb
ExecStartPre=/usr/bin/docker pull mongo:6
ExecStart=/usr/bin/docker run --rm --name forestvendetta-mongodb -v /var/stuff/forestvendetta/ForestVendetta/config/mongod.conf:/etc/mongo/mongod.conf:ro -v /var/stuff/forestvendetta/ForestVendetta/storage/mongodb:/data/db mongo:6 --config /etc/mongo/mongod.conf

[Install]
WantedBy=multi-user.target
	